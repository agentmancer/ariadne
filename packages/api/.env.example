# Environment
NODE_ENV=development

# Server
PORT=3002

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sherlock

# JWT
JWT_SECRET=your-secret-key-change-me-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# AWS S3
AWS_REGION=us-east-1
AWS_S3_BUCKET=sherlock-data
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Email (SMTP)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@sherlock.com
SMTP_HOST=smtp.fastmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# SendGrid (alternative to SMTP)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Prolific API
PROLIFIC_API_KEY=your-prolific-api-key
PROLIFIC_API_URL=https://api.prolific.co/api/v1
